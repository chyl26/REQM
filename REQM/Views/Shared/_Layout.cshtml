<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 产品经理助手</title>
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Content/Scripts/bootstrap.min.js"></script>
</head>

<body class="container">
    <header>
        <nav class="navbar navbar-inverse ">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("产品经理助手", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("单项选择题", "Index", "Home")</li>
                        <li>@Html.ActionLink("案例分析题", "Index", "CaseAnalysis")</li>
                        <li>@Html.ActionLink("在线测试", "Index", "Testings")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            @{
                                var UserNanme = Session["User"] == null ? string.Empty : ((User)Session["User"]).UserName;
                            }
                            <a href="#">@UserNanme</a>
                        </li>
                        <li>
                            @if (Session["User"] == null)
                            {
                                <a href="~/Account/Login">登陆</a>
                            }
                            else
                            {
                                <a href="~/Account/Logoff">注销</a>
                            }

                        </li>
                    </ul>
                </div>
                <div class="collapse navbar-collapse">

                </div>
            </div>
        </nav>
    </header>

    <h2 class="page-header">@ViewBag.Title</h2>
    @*<div>
            @RenderBody()
        </div>*@
    <footer>
        <nav class="navbar-default navbar-fixed-bottom text-center">
            &copy;@DateTime.Now.Year
        </nav>
    </footer>

    <section>

        @RenderBody()

    </section>

    @*@Scripts.Render("~/bundles/jquery")*@

    @RenderSection("scripts", required: false)

</body>
</html>
