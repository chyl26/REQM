@model LoginView

@{
    ViewBag.Title = "用户登录";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-md-6">
        <img src="~/Image/Logo.jpg" alt="" width="300" height="300" align="right" class="img-thumbnail" />
    </div>
    <div class="col-md-4">
        <div class="form-group">
            @Html.LabelFor(m => m.UserName)
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "请输入用户名" })
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PasswordHash)
            @Html.PasswordFor(m => m.PasswordHash, new { @class = "form-control", placeholder = "请输入密码" })
            @Html.ValidationMessageFor(m => m.PasswordHash, "", new { @class = "text-danger" })
        </div>
        <span class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <input name="rememberMe" tabindex="4" class="auto-login" id="rememberMe" type="checkbox" value="true">
            <label for="rememberMe">下次自动登录</label>
        </span>
        <span class="col-xs-6 col-sm-6 col-md-6 col-lg-6 forget tracking-ad" data-mod="popu_26">
            <a tabindex="5" href="#">忘记密码</a>
        </span>
        <button type="submit" class="btn btn-primary btn-block" id="btnLogin">登录</button>
        <button type="button" class="btn btn-default btn-block" id="btnRegister">注册</button>
        <div class="btn-group">
        </div>
    </div>
        <div class="clearfix"></div>
}


<script>
    $(function(){
        $("#btnRegister").click(function () {
            location.href = "@Url.Content("~/Account/Register")";
        })
    })

</script>

